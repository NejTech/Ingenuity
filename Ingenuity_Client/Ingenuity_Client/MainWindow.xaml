<Window x:Class="Ingenuity_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ingenuity_Client"
        mc:Ignorable="d"
        Title="Ingenuity Robot by Honza^4" Height="200" Width="300" Background="Azure">
    <Grid>
        <TextBox HorizontalAlignment="Stretch" Height="23" Grid.Row="1" TextWrapping="NoWrap" VerticalAlignment="Center" x:Name="RobotAddressTextBox"/>
        <Label x:Name="label" Grid.Row="0" Content="IP Adresa robota:" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <Button x:Name="button" Grid.Row="4" Content="Spustit" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="button_Click"/>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
    </Grid>
</Window>
